{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "^start:build"
            ],
            "outputs": [
                "dist/**",
                ".vite/**",
                "build/**"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}