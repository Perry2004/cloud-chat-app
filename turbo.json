{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": [
        "AUTH0_DOMAIN",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_CALLBACK_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".output/**"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}